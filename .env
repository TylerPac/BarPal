############################################
# Dev environment variables for BarPal
############################################
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=barpal_db
MYSQL_USER=barpal_user
MYSQL_PASSWORD=barpal_pass

# Optional host port overrides (avoid conflicts with other stacks)
MYSQL_HOST_PORT=3310
BACKEND_HOST_PORT=8080
WEB_HOST_PORT=3001

# Spring profile
SPRING_PROFILES_ACTIVE=docker

# Frontend API base URL injected at build/run time
REACT_APP_API_BASE_URL=http://localhost:8080

# Ollama base URL (dev workstation IP). Adjust if your PC IP changes.
OLLAMA_BASE_URL=http://192.168.1.5:11434

# Legacy spring datasource variables (still supported if referenced directly)
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/barpal_db
SPRING_DATASOURCE_USERNAME=barpal_user
SPRING_DATASOURCE_PASSWORD=barpal_pass
